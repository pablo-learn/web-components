{
  "name": "web-components",
  "version": "1.0.0",
  "type": "module",
  "description": "A learning project demonstrating Web Components with TailwindCSS",
  "main": "Button.js",
  "scripts": {
    "dev": "concurrently \"npm run css:watch\" \"npm run serve\"",
    "css:watch": "tailwindcss -i ./input.css -o ./output.css --watch",
    "css:build": "tailwindcss -i ./input.css -o ./output.css --minify",
    "serve": "http-server -p 3000 -o",
    "compose": "node compose.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pablo-learn/web-components.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pablo-learn/web-components/issues"
  },
  "homepage": "https://github.com/pablo-learn/web-components#readme",
  "devDependencies": {
    "concurrently": "^9.1.0",
    "http-server": "^14.1.1",
    "tailwindcss": "^3.4.17"
  }
}